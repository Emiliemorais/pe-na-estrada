<!-- Set the page title to "Rodovias" -->
<% content_for :title do %>Rodovias<% end %>

<br>
<div class="row container panel panel-default panel-body">
<div class="container">

	<div class="panel-body">

		<div class="page-header">
		    <h1>Rodovias<br>
		    	<small>Pesquise aqui por uma rodovia federal</small>
		    </h1>
		</div>

		<!-- Search bar for a highway -->
		<%= form_tag highways_path, :method => "get" , id: "search-highway-form" do%>
			
			<br>
			<span class="label label-success">Pesquisar Rodovia</span>
			<div class="row">
			<div class="col-lg-6">
			<div class="input-group">
					
				<div class="form-horizontal">
					  <%= text_field_tag :highway_search, 
						params[:highway_search],
						placeholder: "Informe uma rodovia",
						required: true,
						:input_html => {:size => 40, :maxlenght => 3} %>
				</div>

			</div><!-- /input-group -->
			</div> <!-- /.col-lg-6 -->
			</div> <!-- /.row -->

			<div><%= submit_tag "Pesquisar", :name => nil%></div>

		<% end %>
		<!-- End of search bar for a highway form -->

	
		<% if @highway.blank? == false %>

		<div class="container" align="center">
		<div class="panel panel-success" style="width: 300px;">
			  
			<div class="panel-heading">
				
				<h1 class="panel-title" style="text-align: left">
					<%= "Rodovias com '#{@search_highway_form_result}' no nome:"%>
				</h1>

			 </div>

			<table class="table">

				<tr>
					
					<td style="text-align: center;"><%= "BR"%></td>
					<td></td>
					<td style="text-align: center;"><%= "Entensão da rodovia"%></td>
					<td></td>

				</tr>

				<% @highway.each do |highway| %>
				
					<tr>
						<td style="text-align: center;">
							<%= "#{highway.idBr}" %>
						</td>

						<td></td>

						<td style="text-align: center;">	
							<% if highway.mileage.blank? == false %>
								<%= "#{highway.mileage} Km" %>	
							<% else %>
								<%= "Sem informações no momento" %>
							<% end %>
						</td>

						<td></td>
					</tr>

				<% end %>
				
			</table>
		</div>
		</div>
		
		<% else %>
			
			<% if !@param_exists %>
				<br><br>
				<div class="alert alert-danger" role="alert" style="text-align: center;">
					Nenhuma rodovia com esse nome ou parte dele. Digite novamente.
				</div>
			<% end %>

	   	 <% end %>

		<br>
	</div>

</div>
</div>
